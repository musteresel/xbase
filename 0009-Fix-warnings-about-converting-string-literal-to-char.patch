---
 xbase64-3.1.2/xbase64/xbfilter.cpp | 2 +-
 xbase64-3.1.2/xbase64/xbfilter.h   | 2 +-
 xbase64-3.1.2/xbase64/xbstring.cpp | 2 +-
 xbase64-3.1.2/xbase64/xbstring.h   | 2 +-
 4 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/xbase64-3.1.2/xbase64/xbfilter.cpp b/xbase64-3.1.2/xbase64/xbfilter.cpp
index 5a687cc..ac8bfe7 100644
--- a/xbase64-3.1.2/xbase64/xbfilter.cpp
+++ b/xbase64-3.1.2/xbase64/xbfilter.cpp
@@ -62,7 +62,7 @@
   \param index
   \param exp
 */
-xbFilter::xbFilter( xbDbf * dbf, xbIndex * index, char * exp )
+xbFilter::xbFilter( xbDbf * dbf, xbIndex * index, const char * exp )
 {
   xbShort rc;
   Status = 0;
diff --git a/xbase64-3.1.2/xbase64/xbfilter.h b/xbase64-3.1.2/xbase64/xbfilter.h
index 2f3812f..ae44d5b 100644
--- a/xbase64-3.1.2/xbase64/xbfilter.h
+++ b/xbase64-3.1.2/xbase64/xbfilter.h
@@ -55,7 +55,7 @@
 class XBDLLEXPORT xbFilter
 {
 public:
-  xbFilter( xbDbf * dbf, xbIndex * index, char * expression );
+  xbFilter( xbDbf * dbf, xbIndex * index, const char * expression );
   virtual ~xbFilter();
 
   xbShort GetFirstFilterRec();
diff --git a/xbase64-3.1.2/xbase64/xbstring.cpp b/xbase64-3.1.2/xbase64/xbstring.cpp
index aa829ab..0dee930 100644
--- a/xbase64-3.1.2/xbase64/xbstring.cpp
+++ b/xbase64-3.1.2/xbase64/xbstring.cpp
@@ -461,7 +461,7 @@ void xbString::setNum(long num) {
   \param num
 */
 
-void xbString::setNum( char * fmt, double num) {
+void xbString::setNum(const char * fmt, double num) {
   xbString f;
   f = "%";
   f += fmt;
diff --git a/xbase64-3.1.2/xbase64/xbstring.h b/xbase64-3.1.2/xbase64/xbstring.h
index 1087255..bdc0a16 100644
--- a/xbase64-3.1.2/xbase64/xbstring.h
+++ b/xbase64-3.1.2/xbase64/xbstring.h
@@ -114,7 +114,7 @@ public:
   xbString &remove(size_t pos = 0, int n = npos);
   void     resize(size_t size);  
   void     setNum(long num);
-  void     setNum(char * fmt, double num);
+  void     setNum(const char * fmt, double num);
   xbString &sprintf(const char *format, ...);
   void     swapChars( char from, char to );
   void     toLowerCase();
